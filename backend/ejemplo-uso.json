{
  "descripcion": "Ejemplos de peticiones para el webhook de ChatGPT",
  "ejemplos": [
    {
      "nombre": "Mensaje simple",
      "metodo": "POST",
      "url": "http://localhost:8080/webhook/chat",
      "headers": {
        "Content-Type": "application/json"
      },
      "body": {
        "mensaje": "Hola, ¿cómo estás?",
        "usuario": "usuario1"
      }
    },
    {
      "nombre": "Pregunta técnica",
      "metodo": "POST", 
      "url": "http://localhost:8080/webhook/chat",
      "headers": {
        "Content-Type": "application/json"
      },
      "body": {
        "mensaje": "¿Puedes explicarme qué es Spring Boot en Java?",
        "usuario": "desarrollador"
      }
    },
    {
      "nombre": "Solicitud de código",
      "metodo": "POST",
      "url": "http://localhost:8080/webhook/chat", 
      "headers": {
        "Content-Type": "application/json"
      },
      "body": {
        "mensaje": "Escribe un ejemplo de función recursiva en Java",
        "usuario": "estudiante"
      }
    }
