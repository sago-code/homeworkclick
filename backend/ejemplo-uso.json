  "comandos_curl": [
    "curl -X POST http://localhost:8080/webhook/chat -H \"Content-Type: application/json\" -d '{\"mensaje\": \"Hola ChatGPT\", \"usuario\": \"test\"}'",
    "curl http://localhost:8080/webhook/health",
    "curl http://localhost:8080/webhook/test"
